{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
       {
         "include": "**/*.graphql",
         "exclude": "**/*.test.graphql",
         "watchAssets": true
       },
       {
         "include": "**/*.html",
         "watchAssets": false
       }
     ],
     "webpack": false
   },
   "autoSchemaFile": "**/*.graphql"
}
